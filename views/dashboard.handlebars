<h2 class="title">Dashboard</h2>
<h3 class="section-title">All Blog Posts</h3>
{{#if blogPosts.length}}
    <ul class="post-list">
        {{#each blogPosts}}
            <li class="post-item">
                 <div class="post-header">
                    <h3 class="button btn-title"><a class="btn-title" href="post/{{this.id}}">{{this.title}}</a></h3>
                    <span class="post-author">by {{this.user.username}}</span>
                </div>
                <div class="post-content">
                    <p>{{this.content}}</p> <!-- Add content here -->
                </div>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>No blog posts found.</p>
{{/if}}

